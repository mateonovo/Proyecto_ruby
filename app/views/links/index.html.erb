<p style="color: green"><%= notice %></p>

<h1>Links</h1>

<div id="links">
  <% @links.each do |link| %>
    <%= render link %>
    <p>
      <%= link_to "Show this link", link %>
      <!-- Display the URL for the link -->
      <%= "URL: #{link.unique_url}" %>
      <%=  " category : #{link.link_category} "%>
    </p>
  <% end %>
</div>

<%= link_to "New link", new_link_path %>
